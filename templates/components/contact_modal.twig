
<div id="contact_modal" class="modal" role="dialog">

<div class="modal-dialog centered modal-xl">

<div class="modal-content">

<div class="modal-header">

<div>

<h3 class="font-gotham text-3xl mb-3">{{ header.contact_modal.title }}</h3>

<p class="mb-0">{{ header.contact_modal.description }}</p>

</div>

<button class="close border border-red-600 text-red-600 hover:bg-red-600 hover:text-white rounded-full h-[30px] w-[30px]" aria-label="Close">
<i class="fa fa-times" aria-hidden="true"></i>
</button>

</div> <!-- /.modal-header -->

<div class="modal-body">

<div class="grid lg:grid-cols-2 lg:items-center py-6 gap-x-20 gap-y-8">

<div>{% include "/pages/partnerships/form/form.twig" %}</div>

<div class="flex flex-col-reverse lg:flex-col">

<img src="{{ header.contact_modal.map }}" class="mx-auto block mb-4 lg:w-[500px]" alt="" />

<div class="flex flex-col gap-y-2">

<ul class="list-none flex mb-2">

{% for item in footer.infos.social_medias %}

<li class="mr-4">

<a target="_blank" href="{{ item.link }}" class="flex justify-center items-center h-[30px] w-[30px] rounded-full bg-secondary text-white hover:bg-primary hover:text-white transition-all duration-300">

<i class="fa fa-{{ item.type }}" aria-hidden="true"></i>

</a>

</li>

{% endfor %}

</ul>

<span class="font-medium">{{ footer.infos.email }}</span>

<span class="text-primary text-xl">+33 06 09 44 34 02</span>


</div>
</div>


</div> <!-- /.grid -->

</div> <!-- /.modal-body -->
</div>
</div>
</div>