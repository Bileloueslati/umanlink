<header class="header w-full py-4">
	<div class="theme_container">
		<div class="flex flex-row justify-between">
			<h1>Welcome to</h1>

			<nav id="nav-main" class="flex" role="navigation">
				{% if menu %}
					<ul class="list-none flex">
						{% for item in items %}
							<li class="mr-6 {{ item.classes | join(' ') }}">
								<a class="hover:text-blue transition-colors" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>

							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</nav>

			<a class="bg-blue rounded-full py-2 px-6 text-white hover:opacity-80" href="/">Contactez-nous</a>

		</div>
	</div>
</header>
