<header class="header w-full py-6 fixed z-50 shadow-md top-0 bg-white font-gotham font-medium transition-transform duration-500">
	<div class="container mx-auto">
		<div class="flex flex-row justify-between items-center">
			
			<a href="{{ site.url }}"><img src="{{ site.logo}}" alt={{site.name}} class="lg:max-w-md max-w-[150px]" /></a>

			<div class="lg:justify-between items-center flex">
 
			<nav id="primary-nav" class="hidden lg:block mr-10" role="navigation">
				{% if menu %}
					<ul>
						{% for item in items %}
							<li class="{{ item.classes | join(' ') }}">
								<a href="{{ item.link }}">{{ item.title }}</a>

							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</nav>

			<div class="flex items-center">
			
			<button class="bg-primary rounded-full py-2 lg:py-3 lg:px-6 px-3 text-white hover:opacity-80 text-md font-gotham font-medium outline-none" data-target="contact_modal" data-toggle="modal">
			
			<span class="hidden lg:block">Contactez-nous</span>

			<span class="lg:hidden"><i class="fa fa-envelope"></i></span>
			
			</button>

			<button class="lg:hidden inline-flex ml-1 hamburger" data-canvas-target="menu_offcanvas" data-canvas-toggle="offcanvas" role="button">
			  <span class="hamburger-line first"></span>
              <span class="hamburger-line second"></span>
               <span class="hamburger-line third"></span>
			</button>
			
			
			</div>


		</div>

		   
	</div>
</header>
