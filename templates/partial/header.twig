<header class="header w-full py-6 fixed top-0">
	<div class="theme_container">
		<div class="flex flex-row justify-between">
			<h1>Welcome to</h1>

			<nav id="primary-nav" class="hidden lg:block" role="navigation">
				{% if menu %}
					<ul>
						{% for item in items %}
							<li class="{{ item.classes | join(' ') }}">
								<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>

							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</nav>

			<div class="hidden lg:block">

			<a class="bg-primary rounded-full py-2 px-6 text-white hover:opacity-80 text-lg" href="/">Contactez-nous</a>

			</div>

		</div>
	</div>
</header>
