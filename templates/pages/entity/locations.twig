
{% set group = post.meta('locations') %}

<section class="my-16">

<div class="container mx-auto">

<span class="small_title">{{ group.small_title }}</span>

<h2 class="lg:font-gotham font-futura font-bold lg:text-3xl text-2xl mb-4 text-secondary">{{ group.title }}</h2>

<div class="grid lg:grid-cols-2 items-center">

<div class="mb-12 lg:mb-0"><img src="{{ group.image }}" class="pointer-events-none" alt="" /></div>

<div>

<div class="grid grid-cols-2 gap-x-16 gap-y-12">

{% for item in group.adresses %}

<div class="flex flex-col">

<span class="lg:font-gotham font-bold mb-4">{{ item.place }}</span>

<span>{{ item.address }}</span>

</div>

{% endfor %}

<div>

</div>

</div>
</div>

</section>