{% set group = post.meta('engagement') %}

<section class="my-16 relative">

<div class="container mx-auto">

<div class="grid lg:grid-cols-2 gap-x-20 items-center">

<div data-aos="fade-right" data-aos-duration="1500">

<img src="{{ group.image }}" class="max-h-[400px] hidden lg:block" alt="{{ group.title }}" />

</div>

<div data-aos="fade-left" data-aos-duration="1500">

<span class="small_title">{{ group.small_title }}</span>

<h2 class="text-3xl mb-4 text-secondary">{{ group.title }}</h2>

<p>{{ group.description }}</p>

<div class="accordion">

{% for faq in group.faqs %}

  <div class="item">

  <div class="header">
  
  <h4>{{ faq.title }}</h4>

  <button><i class="fa fa-plus" aria-hidden="true"></i></button>

  </div>

    <div class="body">{{ faq.content }} </div>

  </div>

  {% endfor %}


</div>

</div>

</div>

</div>