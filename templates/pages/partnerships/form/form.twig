
<turbo-frame id="partnerships_form">

<form id="form" method="post" action="{{ post.link }}" autocomplete="off" data-turbo-stream>

<div class="form-floating">

<input class="form-control form__input" id="fullname" name="fullname" type="text" placeholder="Full name" required/>

<label for="fullname">Nom et prénom</label>

</div>


<div class="form-floating">

<input class="form-control" id="company" name="company" type="text" placeholder="company" />

<label for="company">Société</label>

</div>


<div class="form-floating">

<input class="form-control" id="email" name="email" type="email" placeholder="Email" data-pristine-type="email" required />

<label for="email">Email</label>

</div>


<div class="form-floating">

<input class="form-control" id="phone" name="phone" type="number" placeholder="Phone number" />

<label for="phone">Numéro de téléphone</label>

</div>


<div class="form-floating">

<textarea class="form-control resize-none" id="message" name="message" rows="5" cols="33" placeholder="Message"></textarea>

<label for="message">Message</label>

</div>

<button id="submit-btn" type="submit" class="bg-primary rounded-full py-3 px-8 text-white hover:opacity-80 text-md font-gotham font-medium">Envoyer</button>


</form>

</turbo-frame>
