{% set group = post.meta('intro') %}

<section id="intro">

<div class="container mx-auto md:max-w-[1300px]">

<div class="bg-white shadow py-12 px-10 rounded-xl relative overflow-hidden top-[-50px]">

<div class="w-2/3">

<h2 class="font-bold text-2xl lg:text-3xl mb-4">{{ group.title }}</h2>

<p class="lg:text-lg mb-0">{{ group.description }} </p>

</div>

<img src="{{ group.image }}" class="absolute top-0 right-0 h-[200px] lg:h-[100%] pointer-events-none lg:w-[300px] w-[200px]" alt="" />

</div>

</div>

</section>