{% set group = post.meta('career') %}

<section class="lg:my-16 relative flex lg:h-[400px] items-center">

<img src="{{ group.image }}" class="max-h-[400px] hidden lg:block lg:absolute left-0 top-0 bottom-0" alt="" />

<div class="container mx-auto">

<div class="grid lg:grid-cols-12 lg:gap-x-16 lg:mt-0">

<div class="lg:col-start-5 lg:col-span-7">

<span class="small_title">{{ group.small_title }}</span>

<h2 class="font-bold text-2xl lg:text-3xl mb-4">{{ group.title }}</h2>

<p class="text-lg mb-0">{{ group.description }} </p>

</div>

<div class="lg:hidden mb-20 mt-10">

<img src="{{ group.image }}" class=" max-h-[300px] w-[400px] relative left-[-50px]" alt="" />

</div>

</div>

</section>