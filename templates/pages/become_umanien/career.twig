{% set group = post.meta('career') %}

<section class="my-16 relative flex h-[400px] items-center">

<img src="{{ group.image }}" class="max-h-[400px] lg:absolute left-0 top-0 bottom-0" alt="" />

<div class="container">

<div class="grid lg:grid-cols-12 gap-x-16 mt-16 lg:mt-0">

<div class="lg:col-start-5 lg:col-span-7">

<span class="small_title">{{ group.small_title }}</span>

<h2 class="font-bold text-3xl mb-4">{{ group.title }}</h2>

<p class="text-lg mb-0">{{ group.description }} </p>

</div>

</div>

</section>