{% set group = post.meta('success') %}

<section id="success" class="bg-secondary text-white my-8 py-20 relative">

<img data-src="{{ group.image }}" class="lazy-image lg:block hidden max-h-[500px] lg:absolute right-0 top-0 bottom-0 h-full pointer-events-none" alt="" />

<div class="container mx-auto">

<div class="grid lg:grid-cols-2 lg:w-2/3">

{% for key, item in group.blocks %}

<div class="flex flex-col mb-4 px-8" data-aos="fade-up" data-aos-duration="2500" data-aos-delay="{{key + 3 * key}}00">

<h4 class="text-4xl text-teal-400 font-bold mb-4">{{ item.number }}</h4>

<p class="lg:text-lg mb-0">{{ item.description }}</p>

</div>

{% endfor %}

</div>
</div>

</section>