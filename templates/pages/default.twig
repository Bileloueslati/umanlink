{% extends "base.twig" %}

{% block content %}

<section class="banner-title mb-10">

<div class="container mx-auto">

<div class="lg:max-w-5xl">

<ul class="list-none flex mb-3">

<li class="mr-2">
<a href="{{ site.url }}">{{ site.name }}</a>
<span class="pl-2"><i class="fa fa-chevron-right text-sm" aria-hidden="true"></i></span>
</li>

<li><a href="{{ post.link }}" class="text-primary">{{ post.title }}</a></li>

</ul>

<h1>{{ post.title }}</h1>

</div>

</div>

</section>

<section id="page_content">

<div class="container mx-auto">

<div>{{ post.content }}</div>

</div>

</section>


	
{% endblock %}
