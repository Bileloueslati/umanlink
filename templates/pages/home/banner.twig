
{% set hero = post.meta('hero_banner') %}

<section class="h-screen w-full bg-cover text-white bg-center flex" style="background-image: url({{hero.image}})">

<div class="pt-10 flex flex-col justify-center items-center text-center w-6/12 mx-auto h-full">

<h1 class="text-6xl mb-6 font-gotham font-bold">{{ hero.title }}</h1>

<p class="mb-6 text-xl">{{ hero.description }}</p>

<a class="bg-primary rounded-full py-2 px-10 text-white hover:opacity-80 text-lg font-gotham font-medium" id="btn" href="/">Explorer</a>

</div>


</section>