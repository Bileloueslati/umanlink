

{% set hero = post.meta('hero_banner') %}



<section class="relative h-[500px] lg:h-screen w-full text-white flex">

{% if not isMobile() %}

 <video class="hidden lg:block absolute inset-0 h-full w-full object-cover" poster="{{hero.image}}" muted autoplay loop>
    <source src="{{ hero.video }}" type="video/mp4" />
  </video>

  {% endif %}


<img class="lg:hidden block absolute inset-0 h-full w-full object-cover" src="{{hero.image}}" />

<div class="absolute inset-0 h-full w-full bg-black bg-opacity-40 z-10"></div>

<div class="pt-10 flex flex-col justify-center items-center text-center px-12 lg:w-6/12 mx-auto h-full z-20 relative">

<h1 class="text-4xl lg:text-6xl mb-6 font-gotham font-bold" data-aos="fade-up" data-aos-duration="1500">{{ hero.title }}</h1>

<p class="mb-6 text-xl lg:text-2xl" data-aos="fade-up" data-aos-duration="1500" data-aos-delay="500">{{ hero.description }}</p>

<a class="bg-primary rounded-full py-2 px-10 text-white hover:opacity-80 text-lg lg:font-gotham font-medium" id="btn" href="{{ hero.cta.link}}" data-aos="fade-up" data-aos-duration="1500" data-aos-delay="800">{{ hero.cta.title}}</a>

</div>

</section>